{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

<!-- Navigation -->
    {% block navigation %}
        {{ parent()}}
    {% endblock %}

<!-- Header -->
    {% block header %}
        {{ parent()}}
    {% endblock %}

<!-- Flash messages -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-warning ">
            <h6>{{ message }}</h6>
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success align-items-center">
            <p class= "align-items-center">{{ message }} </>
        </div>
    {% endfor %}

<!-- Section -->
    <section class="h-100 h-custom" style="background-color: #d2c9ff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5">
                                            <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                            <h6 class="mb-0 text-muted">0 items</h6>
                                        </div>
                                        <hr class="my-4">

                                        <h1>Add items to cart to start shopping!</h1>
                                        <h2 class="mb-0">
                                            <a href="{{path('home')}}" class="text-decoration-none text-body">
                                            <i class="bi bi-arrow-bar-left"></i>
                                                Back to shop</a>
                                        </h2>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    {% block footer %}
        {{ parent()}}
    {% endblock %}
    
        
    {% block javascripts %}
        {{ parent()}}
    {% endblock %}

{% endblock %}
