{% extends 'base.html.twig' %}

{% block title %}Loja do Mestre André{% endblock %}

{% block body %}
<!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">Board Games Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#!">All Products</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#!">Popular Items</a></li>
                                <li><a class="dropdown-item" href="#!">New Arrivals</a></li>
                            </ul>
                        </li>
                          
                        {% if app.user == null %}
                          <li class="nav-item"><a class="nav-link" href="{{ path('registration.register') }}">Register</a></li>
                          <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                        {% endif %}
                        {% if app.user %}
                          <li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">Logout</a></li>
                          <li class="nav-item"><a class="nav-link">{{ app.user.email }}</a></li>
                          
                        {% endif %}
                    </ul>
    
                    <form class="d-flex" action="{{path('app_cart')}}">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
<!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Board Games Store</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Buy our lovely products!</p>
                </div>
            </div>
        </header>
<!--Test-->
    {% for message in app.flashes('error') %}
            <div class="alert alert-warning ">
                <h6>{{ message }}</h6>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success align-items-center">
                <p class= "align-items-center">{{ message }} </>
            </div>
        {% endfor %}
        <div class="container">
            <div class="card">
