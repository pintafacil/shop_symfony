{% extends 'base.html.twig' %}

{% block title %}Loja do Mestre André{% endblock %}

{% block body %}

{# --------------------------------------------- Navbar Bootstrap5 ----------------------------------------------------------------------------#}
 <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">Board Games Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="#!">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#!">All Products</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#!">Popular Items</a></li>
                                <li><a class="dropdown-item" href="#!">New Arrivals</a></li>
                            </ul>
                        </li>
                          <li class="nav item"><a href="{{ path('product.create') }}" class="nav-link">Create Product</a></li>
                        {% if app.user == null %}
                          <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                        {% endif %}
                        {% if app.user %}
                          <li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">Logout</a></li>
                          <li class="nav-item"><a class="nav-link">{{ app.user.email }}</a></li>
                        {% endif %}
                    </ul>
                    
                    
                    
                    <form class="d-flex">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                    </form>
                </div>
            </div>
        </nav>


<!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Shop in style</h1>
                    <p class="lead fw-normal text-white-50 mb-0">With this shop homepage template</p>
                </div>
            </div>
        </header>

<!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          
                    {% set maxPrice = prices|length %}

                      {% for product in products %}
                        {% set i = 0 %}
                            <div class="col mb-5">
                                <div class="card h-100">
                                {% if product.status == true %}
                                    <h6 class="text-center text-success">Active Product</h6>
                                {% endif %}
                                {% if product.status == false %}
                                    <h6 class="text-center text-danger" >Inactive Product</h6>
                                {% endif %}
                                    <!-- Product image-->
                                    <img class="card-img-top" src="{{ product.imagepath }}" alt="{{ product.name }}" />
                                    <!-- Product details-->
                                    <div class="card-body p-4">
                                        <div class="text-center">
                                            <!-- Product name-->
                                            <h5 class="fw-bolder">{{ product.name }}</h5>
                                            <!-- Product price-->
                                            <h6 class="card-text">{{ product.description }}</h6>
                                            
                                            {% for price in prices %}
                                                {% set priceId = prices[i].getProductid().getId() %}

                                                {% if priceId == product.id %}
                                                    {% if price.status == true %}
                                                        {% set priceValue = price.value %}
                                                        {{price.value}} €
                                                    {% endif %}
                                                {% endif %}
                                                    {% if i < maxPrice %}
                                                        {% set i = i + 1 %}
                                                    {% endif %}
                                              {% endfor %}

                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center">
                                            <a class="btn btn-outline-dark mt-auto" href="{{ path('product.detail', {id: product.id}) }}">
                                            View details
                                            </a>
                                            <a class="btn btn-outline-dark mt-auto dropdown-toggle" role="button" data-bs-toggle="dropdown" id="manageProduct" aria-expanded="false">
                                              Manage Product
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="manageProduct">
                                                <li><a class="dropdown-item" href="{{ path('product.update', {id: product.id}) }}">Edit product</a></li>
                                                {% if product.status == true %} 
                                                <a class="dropdown-item" href="{{ path('product.disable', {id: product.id}) }}">Disable Product</a></li>
                                                {% endif %} 
                                                {% if product.status == false %}
                                                <a class="dropdown-item" href="{{ path('product.enable', {id: product.id}) }}">Enable Product</a></li>
                                                {% endif %}
                                                <a class="dropdown-item" href="{{ path('product.delete', {id: product.id}) }}">Delete Product</a></li>
                                            </ul>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                      {% endfor %}
                </div>
            </div>
        </section>
                            
<!-- Footer-->
        
        {% block footer %}
            {{ parent()}}
        {% endblock %}
        
            
        {% block javascripts %}
            {{ parent()}}
        {% endblock %}

        

        <!-- Bootstrap core JS-->
        {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script> #}
        <!-- Core theme JS-->


{% endblock %}
