{% extends 'base.html.twig' %}

{% block title %}
  {{parent()}}
{% endblock %}

{% block body %}

<!-- Navigation-->
    {% block navigation %}
        {{parent()}}
    {% endblock %}

<!-- Header-->
    {# {% block header %}
        {{parent()}}
    {% endblock %} #}

<!-- Flash Messages-->
    {% for message in app.flashes('error') %}
            <div class="alert alert-warning ">
                <h6>{{ message }}</h6>
            </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success align-items-center">
            <p class= "align-items-center">{{ message }} </>
        </div>
    {% endfor %}

<!-- Section-->
  <h3 class="box-title mt-5">Stock table</h3>
    <div class="table-responsive">
        <table class="table table-striped table-product">
        <tbody>
        <tr>
            <td>Stock Value</td>
            <td>Date of Stock Change</td>
            <td>Status</td>
        </tr>
        {% for stock in stocks%}
            
                <tr>
                    <td>{{stock.value}} units</td>
                    <td>{{stock.timestamp | date('d/m/Y h:i:s')}}</td>
                    <td>{{stock.status}}</td>
                </tr>
            
        {% endfor %}
        </tbody>
        </table>
    </div>

  <h3 class="box-title mt-5">Price table</h3>
    <div class="table-responsive">
        <table class="table table-striped table-product">
        <tbody>
        <tr>
            <td>Price Value</td>
            <td>Date of Price Change</td>
            <td>Status</td>
        </tr>
        {% for price in prices%}
            
